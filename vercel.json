{
  "version": 2,
  "buildCommand": "pnpm build",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/webhook/github",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "DISCORD_TOKEN": "$DISCORD_TOKEN",
    "DISCORD_CHANNEL_ID": "$DISCORD_CHANNEL_ID", 
    "GITHUB_ACCESS_TOKEN": "$GITHUB_ACCESS_TOKEN",
    "GITHUB_USERNAME": "aspauldingcode",
    "GITHUB_REPOSITORY": "glow-feedback"
  },
  "outputDirectory": "api"
}